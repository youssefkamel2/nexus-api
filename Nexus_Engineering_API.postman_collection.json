							"raw": "{\n    \"name\": \"Updated Name\",\n    \"email\": \"updated@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/admin/users/{encodedId}",
							"host": ["{{base_url}}"],
							"path": ["admin", "users", "{encodedId}"]
